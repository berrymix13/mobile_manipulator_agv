<?xml version="1.0"?>
<launch>

  <arg name="map_file" default="$(find myagv_navigation)/map/map.yaml"/>

  <node name="map_server_for_test" pkg="map_server" type="map_server" args="$(arg map_file)" output="screen">
    <param name="frame_id" value="map"/>
  </node>

  <arg name="use_map_topic" default="struecan"/>
  <arg name="scan_topic" default="scan"/>

  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <rosparam file="$(find myagv_navigation)/param/dwa_local_planner_param/amcl.yaml" command="load" />
    <param name="initial_pose_x" value="0.6"/>
    <param name="initial_pose_y" value="0.1"/>
    <param name="initial_pose_a" value="0.0"/> 
  </node>      

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find myagv_navigation)/param/dwa_local_planner_param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find myagv_navigation)/param/dwa_local_planner_param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find myagv_navigation)/param/dwa_local_planner_param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find myagv_navigation)/param/dwa_local_planner_param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find myagv_navigation)/param/dwa_local_planner_param/base_global_planner_params.yaml" command="load" ns="move_base" />  
    <rosparam file="$(find myagv_navigation)/param/dwa_local_planner_param/dwa_local_planner_params.yaml" command="load"/> 
    
    <param name="base_global_planner" value="global_planner/GlobalPlanner"/>

    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/> 
  </node>

</launch>
